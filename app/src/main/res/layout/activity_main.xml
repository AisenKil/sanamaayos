<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextTitle"
        android:layout_marginTop="60dp"
        android:text="@string/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.781"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTagline"
        style="@style/TextTagline"
        android:text="@string/tagline"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRoles"
        style="@style/CardContainer"
        app:layout_constraintTop_toBottomOf="@id/tvTagline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            style="@style/ColumnCenterPadded">

            <TextView
                style="@style/TextSectionHeader"
                android:text="@string/select_role"
                android:layout_marginBottom="20dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/adminCard"
                style="@style/CardOption"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    style="@style/RowOption"
                    android:background="@drawable/btn_admin">

                    <ImageView
                        style="@style/IconOption"
                        android:src="@drawable/ic_admin"
                        android:contentDescription="@string/admin_icon"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            style="@style/TextOptionTitle"
                            android:text="@string/administrator"/>

                        <TextView
                            style="@style/TextOptionDesc"
                            android:text="@string/admin_description"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/studentCard"
                style="@style/CardOption">

                <LinearLayout
                    style="@style/RowOption"
                    android:background="@drawable/btn_student">

                    <ImageView
                        style="@style/IconOption"
                        android:src="@drawable/ic_student"
                        android:contentDescription="@string/student_icon"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            style="@style/TextOptionTitle"
                            android:text="@string/student"/>

                        <TextView
                            style="@style/TextOptionDesc"
                            android:text="@string/student_description"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
